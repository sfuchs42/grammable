<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form">
	<h1>New Gram</h1>
	<!-- User input for the title and picture for their new post -->
	<%= simple_form_for @gram do |f| %>
		<%= f.input :message %>
		<%= f.input :picture %>
		<%= f.submit "Post!", class: 'my-btn' %>
	<% end %>
</div>
